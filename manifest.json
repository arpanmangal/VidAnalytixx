{
  "name": "VidAnalytixx",
  "description": "An extension to get detailed analytics of user attentivenss and emotions during viewing a video.",
  "version": "1.0",

  "manifest_version": 2,

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "logo.png"
  },

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "MacCtrl+Shift+F"
      },
      "description": "Shortcut to open extension window."
    }
  },

  "permissions": [
    "activeTab",
    "storage"
  ]

}
